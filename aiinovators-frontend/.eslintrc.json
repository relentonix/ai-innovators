{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "off",
        "indent": "off",
        "semi": [
            "error",
            "always"
        ],
        "quotes":[
            2,
            "single",
            {
                "avoidEscape": true
            }
        ]
    }
}
